{
  "name": "@filmcalendar/agents-core",
  "description": "Agent's core engine - operation, normalization and validation",
  "version": "0.0.0-development",
  "repository": "git@github.com:filmcalendar/agents-core.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [],
  "bin": {
    "fc-agents-docker-run-local": "sh/docker-run-local.sh"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "dependencies": {
    "@filmcalendar/schemas": "1.5.0",
    "@filmcalendar/types": "1.4.0",
    "@sindresorhus/slugify": "1.1.0",
    "@tuplo/series-with": "1.0.0",
    "ajv": "6.12.6",
    "clean-deep": "3.4.0",
    "date-fns": "2.16.1",
    "md5": "2.3.0",
    "normalizr": "3.6.1",
    "yargs-parser": "20.2.4"
  },
  "devDependencies": {
    "@types/ajv": "1.0.0",
    "@types/jest": "26.0.19",
    "@types/md5": "2.2.1",
    "@types/node": "14.14.10",
    "@typescript-eslint/eslint-plugin": "4.9.0",
    "@typescript-eslint/parser": "4.9.0",
    "commitizen": "4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.15.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "husky": "4.3.4",
    "jest": "26.6.3",
    "microbundle": "0.12.4",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "typescript": "4.1.2"
  },
  "scripts": {
    "build": "bash sh/build.sh",
    "ci:test": "jest --ci",
    "ci:test:coverage": "jest --ci --coverage",
    "lint": "eslint src/**/*.ts",
    "test": "jest --watch",
    "ts-check": "tsc --noEmit",
    "validate": "yarn lint; yarn ts-check"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-typescript/base",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "jest/no-hooks": "off",
      "@typescript-eslint/comma-dangle": "off",
      "no-underscore-dangle": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "no-undef": "off",
          "@typescript-eslint/naming-convention": "off"
        }
      }
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "."
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
