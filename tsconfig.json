{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ES2019"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
